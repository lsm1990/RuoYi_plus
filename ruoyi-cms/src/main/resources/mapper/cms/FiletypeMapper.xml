<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.cms.mapper.FiletypeMapper">
    
    <resultMap type="Filetype" id="FiletypeResult">
        <result property="id"    column="id"    />
        <result property="suffix"    column="suffix"    />
        <result property="name"    column="name"    />
        <result property="icon"    column="icon"    />
    </resultMap>

    <sql id="selectFiletypeVo">
        select id, suffix, name, icon from cms_filetype
    </sql>

    <select id="selectFiletypeList" parameterType="Filetype" resultMap="FiletypeResult">
        <include refid="selectFiletypeVo"/>
        <where>  
            <if test="suffix != null  and suffix != ''"> and suffix = #{suffix}</if>
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="icon != null  and icon != ''"> and icon = #{icon}</if>
        </where>
    </select>

    <select id="selectDictData" resultType="map">
        select id as dictValue, suffix as dictLabel from cms_filetype
    </select>


    <select id="selectFiletypeById" parameterType="Long" resultMap="FiletypeResult">
        <include refid="selectFiletypeVo"/>
        where id = #{id}
    </select>

    <select id="selectFiletypeBySuffix" parameterType="String" resultMap="FiletypeResult">
        <include refid="selectFiletypeVo"/>
        where suffix = #{suffix}
    </select>
    <insert id="insertFiletype" parameterType="Filetype" useGeneratedKeys="true" keyProperty="id">
        insert into cms_filetype
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="suffix != null  and suffix != ''">suffix,</if>
            <if test="name != null  and name != ''">name,</if>
            <if test="icon != null  and icon != ''">icon,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="suffix != null  and suffix != ''">#{suffix},</if>
            <if test="name != null  and name != ''">#{name},</if>
            <if test="icon != null  and icon != ''">#{icon},</if>
         </trim>
    </insert>

    <update id="updateFiletype" parameterType="Filetype">
        update cms_filetype
        <trim prefix="SET" suffixOverrides=",">
            <if test="suffix != null  and suffix != ''">suffix = #{suffix},</if>
            <if test="name != null  and name != ''">name = #{name},</if>
            <if test="icon != null  and icon != ''">icon = #{icon},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteFiletypeById" parameterType="Long">
        delete from cms_filetype where id = #{id}
    </delete>

    <delete id="deleteFiletypeByIds" parameterType="String">
        delete from cms_filetype where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>