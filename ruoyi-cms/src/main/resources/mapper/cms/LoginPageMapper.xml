<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ruoyi.cms.mapper.LoginPageMapper">
    
    <resultMap type="LoginPage" id="LoginPageResult">
        <result property="id"    column="id"    />
        <result property="name"    column="name"    />
        <result property="code"    column="code"    />
        <result property="coverImg"    column="cover_img"    />
        <result property="createTime"    column="create_time"    />
        <result property="createBy"    column="create_by"    />
    </resultMap>

    <sql id="selectLoginPageVo">
        select id, name, code, cover_img, create_time, create_by from cms_login_page
    </sql>

    <select id="selectLoginPageList" parameterType="LoginPage" resultMap="LoginPageResult">
        <include refid="selectLoginPageVo"/>
        <where>  
            <if test="name != null  and name != ''"> and name like concat('%', #{name}, '%')</if>
            <if test="code != null  and code != ''"> and code = #{code}</if>
            <if test="coverImg != null  and coverImg != ''"> and cover_img = #{coverImg}</if>
        </where>
    </select>
    
    <select id="selectLoginPageById" parameterType="Long" resultMap="LoginPageResult">
        <include refid="selectLoginPageVo"/>
        where id = #{id}
    </select>
        
    <insert id="insertLoginPage" parameterType="LoginPage" useGeneratedKeys="true" keyProperty="id">
        insert into cms_login_page
        <trim prefix="(" suffix=")" suffixOverrides=",">
            <if test="name != null  and name != ''">name,</if>
            <if test="code != null  and code != ''">code,</if>
            <if test="coverImg != null  and coverImg != ''">cover_img,</if>
            <if test="createTime != null ">create_time,</if>
            <if test="createBy != null  and createBy != ''">create_by,</if>
         </trim>
        <trim prefix="values (" suffix=")" suffixOverrides=",">
            <if test="name != null  and name != ''">#{name},</if>
            <if test="code != null  and code != ''">#{code},</if>
            <if test="coverImg != null  and coverImg != ''">#{coverImg},</if>
            <if test="createTime != null ">#{createTime},</if>
            <if test="createBy != null  and createBy != ''">#{createBy},</if>
         </trim>
    </insert>

    <update id="updateLoginPage" parameterType="LoginPage">
        update cms_login_page
        <trim prefix="SET" suffixOverrides=",">
            <if test="name != null  and name != ''">name = #{name},</if>
            <if test="code != null  and code != ''">code = #{code},</if>
            <if test="coverImg != null  and coverImg != ''">cover_img = #{coverImg},</if>
            <if test="createTime != null ">create_time = #{createTime},</if>
            <if test="createBy != null  and createBy != ''">create_by = #{createBy},</if>
        </trim>
        where id = #{id}
    </update>

    <delete id="deleteLoginPageById" parameterType="Long">
        delete from cms_login_page where id = #{id}
    </delete>

    <delete id="deleteLoginPageByIds" parameterType="String">
        delete from cms_login_page where id in 
        <foreach item="id" collection="array" open="(" separator="," close=")">
            #{id}
        </foreach>
    </delete>
    
</mapper>